<!DOCTYPE html>
<html>
  <head>
    <title>Proecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to (Page.find_by permalink: 'about').title, permalink_path("about")%>
    <%= link_to (Page.find_by permalink: 'contact').title, permalink_path("contact")%>
    <%= yield %>
  </body>
</html>
