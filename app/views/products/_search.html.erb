<%= form_with(url: search_path, local: true, method: "get") do %>

  <div class="col-lg-6">
    <div class="input-group">

        <%= text_field_tag :search_term, nil, placeholder: ' Search...', class: 'form-control mr-sm-2' %>
        <%= select_tag :guntypes, options_for_select(@search_guntypes.map { |x| [x.name, x.id] }), :include_blank => true, class: 'form-select' %>

    </div>
  </div>
<% end %>